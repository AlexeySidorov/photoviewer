<?xml version="1.0" encoding="UTF-8" ?>
<resources>

	<style name="AppTheme"
		parent="AppTheme.Base">
	</style>

	<style name="AppTheme.Base"
		parent="Theme.AppCompat.Light.NoActionBar">
		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="windowActionModeOverlay">false</item>
		<item name="android:windowBackground">@android:color/white</item>
		<item name="android:statusBarColor">@android:color/transparent</item>
		<item name="android:textCursorDrawable">@null</item>
	</style>

	<style name="AppTheme.Splash" parent="AppTheme.Base">
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	 <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
	   <!--<item name="android:background">@color/colorPrimary</item>-->
	  <item name="android:textColorPrimary">#ffffff</item>
	</style>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
 
	<!--Dialog style-->
	<style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
	 <item name="android:windowNoTitle">true</item>
	</style>

	<style name="ToolbarPopUp" parent="ThemeOverlay.AppCompat.Light">
	</style>

	 <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
	  <item name="colorAccent">#E33D40</item>
	  <item name="android:textColorPrimary">@android:color/white</item>
	  <item name="android:background">#2d2d2d</item>
	</style>

	<style name="CircularProgress" parent="Theme.AppCompat.Light">
	  <item name="colorAccent">@color/red</item>
	</style>

	<style name="LikeCountStyle">
		<item name="android:textSize">14sp</item>
		<item name="android:letterSpacing">0.05</item>
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="DescriptionStyle">
		<item name="android:textSize">14sp</item>
		<item name="android:letterSpacing">0.02</item>
		<item name="android:textColor">@color/description_color</item>
	</style>

	<style name="MainTitleStyle">
		<item name="android:textSize">18sp</item>
		<item name="android:letterSpacing">-0.03</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="SubTitleStyle">
		<item name="android:textSize">13sp</item>
		<item name="android:letterSpacing">-0.01</item>
		<item name="android:textColor">@color/sub_title_color</item>
	</style>

</resources>